[Unit]
Description="Jupyter notebook"
After= network.target
[Service]
Environment="PYSPARK_PYTHON=/usr/bin/env python"
Environment="PYSPARK_DRIVER_PYTHON=/usr/bin/jupyter-notebook"
Environment="PYSPARK_DRIVER_PYTHON_OPTS=--allow-root --ip=0.0.0.0 --config={{ jupyter_config_path }}"
ExecStart={{ spark_home}}/bin/pyspark
WorkingDirectory={{ jupyter_home }}

